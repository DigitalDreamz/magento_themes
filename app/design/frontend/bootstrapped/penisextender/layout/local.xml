    <customer_account>
        <remove name="catalog.leftnav.custom" />
    </customer_account>

    <catalog_category_default translate="label">
        <remove name="catalog.leftnav" />
        <reference name="breadcrumbs">
            <block type="catalog/layer_view" name="catalog.leftnav.breadcrumbs" after="currency" template="catalog/layer/view.phtml"/>
        </reference>
    </catalog_category_default>
    
    <catalog_category_layered translate="label">
        <remove name="catalog.leftnav" />
        <reference name="breadcrumbs">
            <block type="catalog/layer_view" name="catalog.leftnav.breadcrumbs" after="currency" template="catalog/layer/view.phtml"/>
        </reference>
    </catalog_category_layered>

	<catalog_product_view translate="label">
		<reference name="content">
            <remove name="product.info.options.wrapper.bottom" />
			<remove name="product.info.addto" />
			<remove name="product_tag_list" />
			<remove name="product.info.bundle" />

        </reference>
		<reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="product.info.additional">
            <block type="bundle/catalog_product_view_type_bundle" name="product.info.additional.data" as="additional_data" template="bundle/catalog/product/view/type/bundle.phtml" translate="label" before="-">
                <label>Add to Cart and Prices</label>
                <action method="addPriceBlockType"><type>bundle</type><block>bundle/catalog_product_price</block><template>bundle/catalog/product/price.phtml</template></action>
                <action method="insert"><block>product.tierprices</block></action>
                <block type="bundle/catalog_product_price" name="bundle.prices" as="bundle_prices" template="bundle/catalog/product/view/price.phtml">
                    <action method="setMAPTemplate"><tmpl>catalog/product/price_msrp_item.phtml</tmpl></action>
                </block>
                <action method="append"><block>product.info.addtocart</block></action>
                <action method="append"><block>product.info.addto</block></action>
            </block>
            
        </reference>
	</catalog_product_view>

    <tag_list_index translate="label">
        <label>Tags List (All Available)</label>
        <!-- Mage_Tag -->
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
        <reference name="left">
            <remove name="tags_popular" />
        </reference>
    </tag_list_index>

